<!DOCTYPE html>
<html lang="en">
<head>
  {{template "header.inc" . }}
</head>
<body>
  {{template "navigation.inc" . }}


  <div id="container">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
      <h1>{{.title}}</h1>
      <div class="row">
      <form action="add" method="post" class="form-horizontal col-lg-9">
        <fieldset>
          <legend>Ajouter un marqueur :</legend>
          <div class="form-group">
            <label for="inputTitle" class="col-lg-3 control-label">Titre :</label>
            <div class="col-lg-9">
              <input type="text" name="title" id="inputTitle" class="form-control">
            </div>
          </div>
          <div class="form-group">
            <label for="inputDesc" class="col-lg-3 control-label">Description :</label>
            <div class="col-lg-9">
              <input type="text" name="desc" id="inputDesc" class="form-control">
            </div>
          </div>
          <div class="form-group">
            <label for="inputX" class="col-lg-3 control-label">Coord. X :</label>
            <div class="col-lg-9">
              <input type="text" name="x" id="inputX" class="form-control">
            </div>
          </div>
          <div class="form-group">
            <label for="inputY" class="col-lg-3 control-label">Coord. Y :</label>
            <div class="col-lg-9">
              <input type="text" name="y" id="inputY" class="form-control">
            </div>
          </div>
          <div class="form-group">
            <label for="groupname" class="col-lg-3 control-label">Groupe:</label>
            <div class="col-lg-9">
            <select class="form-control" id="groupname" name="group">
            {{ range $key, $g := call .groups }}
              <option value="group{{$key}}">{{$key}}: {{$g.Name}}</option>
            {{ end }}
            </select>
            </div>
          </div>
          <div class="form-group">
            <div class="col-lg-6 col-lg-offset-3">
              <a href="/" class="button">Retour sur la carte</a>
              <button type="reset" class="btn btn-default">Annuler</button>
              <button type="submit" class="btn btn-primary">Ajouter</button>
            </div>
          </div>
        </fieldset>
      </form>
      </div>
      <div class="row">
      <form action="addgroup" method="post" class="form-horizontal col-lg-9">
        <fieldset>
          <legend>Ajouter un groupe :</legend>
          <div class="form-group">
            <label for="inputGName" class="col-lg-3 control-label">Titre :</label>
            <div class="col-lg-9">
              <input type="text" name="name" id="inputTitle" class="form-control">
            </div>
          </div>
          <div class="form-group">
            <label for="inputDesc" class="col-lg-3 control-label">Description :</label>
            <div class="col-lg-9">
              <input type="text" name="desc" id="inputDesc" class="form-control">
            </div>
          </div>
          <div class="form-group">
            <label for="color" class="col-lg-3 control-label">Couleur :</label>
            <div class="col-lg-9">
              <div id='color'></div>
              <input type="hidden" name="color" id="color-field">
            </div>
          </div>
          <div class="form-group">
            <label for="icon" class="col-lg-3 control-label">Icone :</label>
            <div class="col-lg-9">
              <div id='icon'></div>
              <input type="hidden" name="icon" id="icon-field">
            </div>
          </div>
          <div class="form-group">
            <div class="col-lg-6 col-lg-offset-3">
              <a href="/" class="button">Retour sur la carte</a>
              <button type="reset" class="btn btn-default">Annuler</button>
              <button type="submit" class="btn btn-primary">Ajouter</button>
            </div>
          </div>
        </fieldset>
      </form>
    </div>
    </div>
    <div class="col-lg-2"></div>
  </div>
</body>



  {{template "script.inc" . }}
  <script src="/js/markers.js"></script>
</html>
